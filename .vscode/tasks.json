{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "gcc build project",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-I${workspaceFolder}/include",
                "${workspaceFolder}/src/*.c",
                "-o",
                "${workspaceFolder}/bin/periodic_table"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}